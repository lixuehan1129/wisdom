<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/sss_rela"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorGray_White">
    <RelativeLayout
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.daimajia.slider.library.SliderLayout
            android:id="@+id/shop_trade_page_slider"
            android:layout_width="match_parent"
            android:layout_height="320dp"/>
        <TextView
            android:layout_below="@id/shop_trade_page_slider"
            android:id="@+id/shop_trade_page_price"
            android:paddingTop="10dp"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:text="￥998"
            android:textColor="@color/colorRed"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/shop_trade_page_text"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:text="商品信息"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            android:layout_below="@id/shop_trade_page_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:id="@+id/view222"
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
    <android.support.v7.widget.Toolbar
        android:layout_below="@+id/view222"
        android:id="@+id/shop_trade_page_mainTool"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorWu"
        app:titleTextColor="@color/colorWhite"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        android:id="@+id/society_new_message_page_tacv"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardElevation="10dp"
        android:padding="3dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp">
            <com.example.wisdompark19.ViewHelper.AmountView
                android:id="@+id/amount_view"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                app:btnTextSize="14sp"
                app:btnWidth="36dp"
                app:tvWidth="50dp"/>
            <TextView
                android:id="@+id/shop_trade_page_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:padding="8dp"
                android:text="立  即  购  买"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>