<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/face_test_mainTool"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorBlue"
        app:titleTextColor="@color/colorWhite"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
    </android.support.v7.widget.Toolbar>
    <ImageView
        android:id="@+id/face_test_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:src="@drawable/no_photo" />
    <Button
        android:id="@+id/face_test_create"
        android:text="创建群组"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <Button
        android:id="@+id/face_test_join"
        android:text="加入群组"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <Button
        android:id="@+id/face_test_delete"
        android:text="删除个人"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <Button
        android:id="@+id/face_test_add"
        android:text="拍照"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/face_test_ide"
        android:text="验证"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/face_test_text"
        android:textSize="20sp"
        android:padding="5dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>