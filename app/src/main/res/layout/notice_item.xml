<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/bottom_lay">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/card_message_image"
                        android:layout_gravity="center"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/ic_launcher_round"/>

                    <TextView
                        android:id="@+id/card_message_tell"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/card_message_image"
                        android:paddingLeft="10dp"
                        android:text="停水通知"
                        android:textColor="@color/colorBlack"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/card_message_xin"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="20dp"
                        android:src="@mipmap/ic_xin" />
                </RelativeLayout>
                <TextView
                    android:paddingLeft="20dp"
                    android:text="具体内容"
                    android:id="@+id/card_message_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="2"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="15sp"
                    android:textColor="@color/colorGray_1"/>
                <TextView
                    android:paddingRight="15dp"
                    android:id="@+id/card_message_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="01月24日"
                    android:textColor="@color/colorGray_1"
                    android:gravity="right" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:visibility="invisible"
                    android:id="@+id/card_message_id"/>
            </LinearLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>