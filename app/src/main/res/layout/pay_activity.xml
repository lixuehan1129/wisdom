<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/pay_mainTool"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorBlue"
        app:titleTextColor="@color/colorWhite"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_below="@id/pay_mainTool"
        android:paddingTop="6dp"
        android:id="@+id/pay_arrange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="缴费管理"
        android:textSize="20dp"
        android:background="@color/colorGray_White"/>

    <LinearLayout
        android:layout_below="@id/pay_arrange"
        android:id="@+id/pay_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/pay_water"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/pay_shadow"
            android:padding="8dp"
            android:gravity="center">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/ic_shui"/>
            <TextView
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="水费"
                android:textColor="@color/colorBlack"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pay_electric"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="match_parent"
            android:background="@drawable/pay_shadow"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/ic_dian"/>
            <TextView
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="电费"
                android:textColor="@color/colorBlack"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pay_gas"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="match_parent"
            android:background="@drawable/pay_shadow"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/ic_qi"/>
            <TextView
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="天然气"
                android:textColor="@color/colorBlack"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pay_property"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/ic_wuye"/>
            <TextView
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="物业费"
                android:textColor="@color/colorBlack"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_below="@id/pay_linear"
        android:paddingTop="6dp"
        android:id="@+id/pay_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="缴费记录"
        android:textSize="20dp"
        android:background="@color/colorGray_White"/>

    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/pay_check"
        android:id="@+id/rv_pay_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.CardView
        android:id="@+id/pay_card"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorGray_White"
        app:cardCornerRadius="3dp"
        android:visibility="invisible"
        android:padding="2dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:paddingRight="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:focusableInTouchMode="true"
            android:focusable="true">
            <LinearLayout
                android:id="@+id/pay_li1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:background="@color/colorWhite">
                <TextView
                    android:text="缴费内容  :  "
                    android:textSize="20sp"
                    android:paddingRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/pay_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:background="@null"
                    android:maxLength="20"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:textColor="@color/colorBlack"
                    android:theme="@style/MyEditText" />
            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/pay_li1"
                android:id="@+id/pay_li2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:background="@color/colorWhite">
                <TextView
                    android:text="当前余额  :  "
                    android:textSize="20sp"
                    android:paddingRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/pay_yue"
                    android:digits="0123456789."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:background="@null"
                    android:maxLength="20"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:textColor="@color/colorBlack"
                    android:theme="@style/MyEditText" />
            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/pay_li2"
                android:id="@+id/pay_li3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:background="@drawable/bottom_lay">
                <TextView
                    android:text="缴费金额  :  "
                    android:textSize="20sp"
                    android:paddingRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>
                <EditText
                    android:id="@+id/pay_count"
                    android:digits="0123456789."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:background="@null"
                    android:maxLength="20"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:textColor="@color/colorBlack"
                    android:theme="@style/MyEditText" />
            </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/pay_li3"
                android:id="@+id/pay_li4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="2dp"
                android:gravity="center"
                android:background="@drawable/bottom_lay">
                <TextView
                    android:id="@+id/pay_cancel"
                    android:text="取消"
                    android:padding="3dp"
                    android:textSize="20sp"
                    android:textColor="@color/colorGray_1"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/pay_shadow"/>
                <TextView
                    android:id="@+id/pay_ok"
                    android:text="确定"
                    android:padding="3dp"
                    android:textSize="20sp"
                    android:textColor="@color/colorBlue"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>