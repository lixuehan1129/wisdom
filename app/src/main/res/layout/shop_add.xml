<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/shop_add_mainTool"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorBlue"
        app:titleTextColor="@color/colorWhite"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:paddingRight="15dp">
        <Button
            android:id="@+id/shop_add_ok"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_gravity="end"
            android:background="@drawable/button_ok"
            android:text="完成"
            android:textColor="@color/colorWhite"
            android:textSize="10sp" />
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_below="@+id/shop_add_mainTool"
        android:id="@+id/shop_add_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:windowSoftInputMode="adjustResize">
        <requestFocus />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="15dp">
            <android.support.v7.widget.CardView
                android:id="@+id/shop_add_cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="7dp"
                app:cardElevation="2dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/shop_add_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxLines="1"
                        android:background="@drawable/bottom_lay"
                        android:hint="输入商品名称"
                        android:maxLength="20"
                        android:textColor="@color/colorBlack"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:theme="@style/MyEditText"
                        android:paddingBottom="2dp"/>
                    <EditText
                        android:id="@+id/shop_add_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="25dp"
                        android:paddingTop="15dp"
                        android:background="@drawable/bottom_lay"
                        android:inputType="textMultiLine"
                        android:lineSpacingMultiplier="1.5"
                        android:imeOptions="actionDone"
                        android:textSize="18sp"
                        android:textColor="@color/colorBlack"
                        android:hint="商品详细描述"
                        android:minLines="3"
                        android:gravity="top"
                        android:theme="@style/MyEditText"/>
                    <EditText
                        android:paddingTop="8dp"
                        android:id="@+id/shop_add_price"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxLines="1"
                        android:background="@drawable/bottom_lay"
                        android:hint="输入商品价格"
                        android:maxLength="20"
                        android:textColor="@color/colorBlack"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:theme="@style/MyEditText"
                        android:paddingBottom="2dp"/>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/shop_add_rv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <android.support.v7.widget.CardView
        android:id="@+id/shop_add_tacv"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorGray_White"
        app:cardElevation="10dp"
        android:padding="3dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">
            <ImageView
                android:layout_alignParentRight="true"
                android:id="@+id/shop_add_take"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_take_photo"
                android:paddingRight="10dp"
                android:tint="@color/colorGray_1"/>
            <ImageView
                android:layout_toLeftOf="@+id/shop_add_take"
                android:id="@+id/shop_add_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_add_photo"
                android:tint="@color/colorGray_1"
                android:paddingRight="15dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>